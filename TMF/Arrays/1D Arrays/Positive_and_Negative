import java.util.Scanner;
public class PosandNeg {
	public static void main(String[] args) {
	
		Scanner sc = new Scanner(System.in);
		System.out.println("Enter the size of the array: ");
		int n=sc.nextInt();
		int arr[]=new int[n];
		int poscount=0;
		int negcount=0;
		for(int i=0;i<n;i++) {
			arr[i]=sc.nextInt();
		}
		for(int i:arr) {
			if(i>0) {
				poscount++;
			}
			else negcount++;
		}
		System.out.println("The count of Positive Numbers is: "+poscount);
		System.out.println("The count of Negative Numbers is: "+negcount);	
	}
}
